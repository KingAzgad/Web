@model Web.Models.Category

@{
    ViewData["Title"] = "Xóa danh mục";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-danger text-white py-3">
                    <h3 class="mb-0 fw-bold text-center">
                        <i class="fas fa-exclamation-triangle me-2"></i>Xóa danh mục
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <h4 class="alert-heading fw-bold">
                            <i class="fas fa-question-circle me-1"></i>Bạn có chắc chắn muốn xóa danh mục này?
                        </h4>
                        <p class="mb-0">Việc xóa danh mục này có thể ảnh hưởng đến các sản phẩm liên quan. Hành động này không thể hoàn tác!</p>
                    </div>

                    <div class="card bg-light">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Thông tin danh mục:</h5>
                            <dl class="row">
                                <dt class="col-sm-3 text-muted">
                                    <i class="fas fa-hashtag me-1"></i>ID:
                                </dt>
                                <dd class="col-sm-9 fw-bold">
                                    @Html.DisplayFor(model => model.Id)
                                </dd>
                                <dt class="col-sm-3 text-muted">
                                    <i class="fas fa-tag me-1"></i>Tên danh mục:
                                </dt>
                                <dd class="col-sm-9 fw-bold">
                                    @Html.DisplayFor(model => model.Name)
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light py-3 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại
                    </a>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-trash-alt me-1"></i>Xác nhận xóa
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>