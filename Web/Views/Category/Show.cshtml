@model Web.Models.Category
@{
    ViewData["Title"] = "Thông tin danh mục";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white py-3">
                    <h3 class="mb-0 fw-bold text-center">
                        <i class="fas fa-info-circle me-2"></i>Thông tin danh mục
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-3 text-center mb-4 mb-md-0">
                            <div class="bg-light rounded-circle p-4 mx-auto" style="width: 120px; height: 120px;">
                                <i class="fas fa-folder-open text-primary" style="font-size: 60px;"></i>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <dl class="row row-cols-1 row-cols-md-2 g-4">
                                <div class="col">
                                    <dt class="text-muted mb-2">
                                        <i class="fas fa-hashtag me-1"></i>ID:
                                    </dt>
                                    <dd class="fs-5 fw-bold">@Model.Id</dd>
                                </div>
                                <div class="col">
                                    <dt class="text-muted mb-2">
                                        <i class="fas fa-tag me-1"></i>Tên danh mục:
                                    </dt>
                                    <dd class="fs-5 fw-bold">@Model.Name</dd>
                                </div>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light py-3 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                    </a>
                    @if (User.IsInRole("Admin"))
                    {
                        <div>
                            <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>Sửa
                            </a>
                            <a asp-action="View" asp-route-id="@Model.Id" class="btn btn-info ms-2">
                                <i class="fas fa-eye me-1"></i>Xem sản phẩm
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>