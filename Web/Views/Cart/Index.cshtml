@model Web.Models.Cart
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    /* Global Styles */
    .cart-container {
        background-color: #f8f9fa;
        padding: 2rem 0;
    }

    .cart-card {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        margin-bottom: 2rem;
    }

    .cart-header {
        padding: 1.5rem;
        border-bottom: 1px solid #e9ecef;
    }

        .cart-header h3 {
            margin: 0;
            font-size: 1.5rem;
            color: #333;
        }

    .cart-body {
        padding: 2rem;
    }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
        color: #333;
    }

        .cart-table thead th {
            background-color: #f1f3f5;
            padding: 12px;
            text-align: left;
            font-weight: 600;
            color: #555;
            border-bottom: 2px solid #e9ecef;
        }

        .cart-table tbody tr {
            background-color: white;
            transition: all 0.3s ease;
        }

            .cart-table tbody tr:hover {
                background-color: #f8f9fa;
            }

        .cart-table td, .cart-table th {
            padding: 12px;
            border-bottom: 1px solid #e9ecef;
        }

    .cart-price {
        color: #e74c3c;
        font-weight: 600;
    }

    .empty-cart {
        text-align: center;
        padding: 2rem;
        color: #666;
        font-style: italic;
    }

    .btn-remove {
        background-color: #dc3545;
        color: white;
        border-radius: 20px;
        padding: 6px 12px;
        font-size: 0.9rem;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-remove:hover {
            background-color: #c82333;
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: all 0.3s ease;
        padding: 10px 20px;
        border-radius: 20px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

    .cart-footer {
        padding: 1rem;
        border-top: 1px solid #e9ecef;
        text-align: center;
    }

        .cart-footer p {
            margin: 0;
            font-size: 1.1rem;
            color: #333;
        }

            .cart-footer p i {
                margin-right: 8px;
                color: #28a745;
            }
</style>

<div class="container-fluid cart-container">
    <div class="cart-card">
        <div class="cart-header">
            <h3>
                <i class="fas fa-shopping-cart me-2"></i>Giỏ hàng của bạn
            </h3>
        </div>

        <div class="cart-body">
            <!-- Thêm debug -->
            <p>Debug: Số lượng sản phẩm trong giỏ hàng: @(Model.Items?.Count ?? 0)</p>

            @if (Model.Items != null && Model.Items.Any())
            {
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Tổng</th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = 1;
                            foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@index</td>
                                    <td>@item.ProductName</td>
                                    <td class="cart-price">@item.ProductPrice.ToString("N0") VNĐ</td>
                                    <td>@item.Quantity</td>
                                    <td class="cart-price">@((item.ProductPrice * item.Quantity).ToString("N0")) VNĐ</td>
                                    <td class="text-center">
                                        <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-remove"
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này khỏi giỏ hàng?');">
                                            <i class="fas fa-trash me-1"></i>Xóa
                                        </a>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-cart">
                    <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                    <p class="mb-0">Giỏ hàng của bạn đang trống.</p>
                </div>
            }
        </div>

        <div class="cart-footer">
            <p>
                <i class="fas fa-money-bill-wave"></i>Tổng tiền: @Model.GetTotal().ToString("N0") VNĐ
            </p>
            <!-- Thêm debug -->
            <p>Debug: Số lượng sản phẩm (footer): @(Model.Items?.Count ?? 0)</p>
            @if (Model.Items != null && Model.Items.Any())
            {
                <div class="mt-3 text-center">
                    <a href="@Url.Action("Index", "Checkout")" class="btn btn-primary">
                        <i class="fas fa-credit-card me-2"></i>Thanh toán
                    </a>
                </div>
            }
            else
            {
                <p>Debug: Không có sản phẩm trong giỏ hàng hoặc Items là null.</p>
            }
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">