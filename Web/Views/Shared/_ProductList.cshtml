@model List<Web.Models.Product>

@if (Model.Any())
{
    <div class="row">
        <div class="col-12">
            <h3 class="mb-4">Sản Phẩm Trong Danh Mục</h3>
        </div>
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card product-card">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="h5 text-primary">@product.Price.ToString("N0") đ</span>
                            <a href="#" class="btn btn-sm btn-outline-primary">Chi tiết</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center text-muted py-5">
        <h4>Không có sản phẩm trong danh mục</h4>
        <p>Danh mục này hiện chưa có sản phẩm nào.</p>
    </div>
}