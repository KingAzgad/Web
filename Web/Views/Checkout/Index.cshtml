@model Web.Controllers.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    /* Global Styles */
    .checkout-container {
        background-color: #f8f9fa;
        padding: 2rem 0;
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .checkout-card {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        width: 100%;
        max-width: 500px;
        padding: 2rem;
        text-align: center;
    }

    .checkout-header {
        margin-bottom: 2rem;
    }

        .checkout-header h3 {
            margin: 0;
            font-size: 1.5rem;
            color: #333;
        }

    .total-amount {
        font-size: 1.5rem;
        font-weight: 600;
        color: #e74c3c;
        margin-bottom: 1.5rem;
    }

    .qr-code-placeholder {
        width: 200px;
        height: 200px;
        background-color: #e9ecef;
        margin: 0 auto 1.5rem auto;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 8px;
        border: 2px dashed #ccc;
    }

        .qr-code-placeholder p {
            color: #666;
            font-style: italic;
        }

    .btn-confirm {
        background-color: #28a745;
        border-color: #28a745;
        transition: all 0.3s ease;
        padding: 10px 20px;
        border-radius: 20px;
        color: white;
        font-size: 1rem;
        text-decoration: none;
    }

        .btn-confirm:hover {
            background-color: #218838;
            border-color: #218838;
        }
</style>

<div class="container-fluid checkout-container">
    <div class="checkout-card">
        <div class="checkout-header">
            <h3>
                <i class="fas fa-credit-card me-2"></i>Thanh toán đơn hàng
            </h3>
        </div>

        <div class="total-amount">
            Tổng tiền: @Model.TotalAmount.ToString("N0") VNĐ
        </div>

        <div class="qr-code-placeholder">
            <p>QR Code Placeholder</p>
        </div>

        <p>Vui lòng quét mã QR để thanh toán</p>

        <div class="mt-3">
            <form asp-action="ConfirmPayment" method="post">
                <button type="submit" class="btn btn-confirm">
                    <i class="fas fa-check me-2"></i>Xác nhận thanh toán
                </button>
            </form>
        </div>
    </div>
</div>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">