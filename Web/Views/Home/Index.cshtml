@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<style>
    /* Global Styles */
    .product-catalog {
        background-color: #f8f9fa;
        padding: 2rem 0;
    }

    /* Advertisement Banner Styles */
    .advertisement-banner {
        width: 100%;
        height: 300px;
        margin-bottom: 2rem;
        border-radius: 12px;
        overflow: hidden; /* Ẩn phần ảnh tràn ra ngoài */
        position: relative; /* Đảm bảo hình ảnh được định vị trong khung */
    }

        .advertisement-banner img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Cắt ảnh để lấp đầy khung, không làm méo */
            object-position: center; /* Căn giữa ảnh */
            display: block; /* Loại bỏ khoảng trống bên dưới ảnh */
        }

    /* Category Sidebar Styles */
    .category-sidebar {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
        transition: all 0.3s ease;
    }

    .category-card {
        margin-bottom: 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .category-card:hover {
            transform: translateX(10px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .category-card.active {
            background-color: #f0f0f0;
            border-left: 4px solid #007bff;
        }

    .category-link {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: #333;
        padding: 0.75rem;
    }

    .category-icon {
        margin-right: 1rem;
        color: #007bff;
        font-size: 1.5rem;
    }

    /* Product Display Styles */
    .product-grid {
        display: flex;
        flex-wrap: wrap;
    }

    .product-card {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
        }

    .product-image-container {
        position: relative;
        overflow: hidden;
    }

    .product-image {
        height: 250px;
        background-size: cover;
        background-position: center;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.1);
    }

    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .product-card:hover .product-overlay {
        opacity: 1;
    }

    .btn-preview {
        color: white;
        border: 2px solid white;
        padding: 10px 20px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-preview:hover {
            background-color: white;
            color: black;
        }

    .product-info {
        padding: 1rem;
    }

    .product-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
    }

    .btn-purchase {
        background-color: #007bff;
        color: white;
        border-radius: 20px;
        padding: 8px 16px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-purchase:hover {
            background-color: #0056b3;
        }

    /* Animations */
    .category-card {
        animation: fadeIn 0.5s ease;
    }

    .product-card {
        animation: fadeIn 0.5s ease;
    }

    /* Footer Styles */
    .site-footer {
        background-color: #2c3e50;
        color: #ecf0f1;
        padding: 3rem 0;
        margin-top: 2rem;
    }

        .site-footer a {
            color: #ecf0f1;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .site-footer a:hover {
                color: #3498db;
            }

        .site-footer h5 {
            font-size: 1.25rem;
            margin-bottom: 1.5rem;
            color: #ecf0f1;
        }

        .site-footer ul {
            list-style: none;
            padding: 0;
        }

            .site-footer ul li {
                margin-bottom: 0.75rem;
            }

    .social-icons {
        display: flex;
        gap: 1rem;
    }

        .social-icons a {
            font-size: 1.5rem;
            color: #ecf0f1;
            transition: color 0.3s ease;
        }

            .social-icons a:hover {
                color: #3498db;
            }

    .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 1.5rem;
        margin-top: 2rem;
        text-align: center;
        width: 100%; /* Sửa lỗi chính tả: witdh -> width */
    }

    /* Responsive Adjustments */
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" / >
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" / >
</style>
<div class="container-fluid product-catalog">
    <!-- Advertisement Banner -->
    <div class="advertisement-banner">
        <img src="~/images/dibien.png" alt="Description">
    </div>

    <div class="row g-4">
        <!-- Left Column: Category Navigation -->
        <div class="col-md-3 category-sidebar">
            <div class="category-header">
                <h3 class="mb-4">Danh mục</h3>
            </div>

            <!-- All Products Category -->
            <div class="category-card @(ViewBag.SelectedCategoryId == null ? "active" : "")">
                <a href="@Url.Action("Index", "Home")" class="category-link">
                    <div class="category-icon">
                        <i class="fas fa-th-large"></i>
                    </div>
                    <div class="category-details">
                        <h5 class="category-title">Tất cả</h5>
                        <p class="category-count">
                            @(ViewBag.Products != null ? ViewBag.Products.Count : 0) sản phẩm
                        </p>
                    </div>
                </a>
            </div>

            <!-- Other Categories -->
            @foreach (var category in ViewBag.Categories)
            {
                <div class="category-card @(ViewBag.SelectedCategoryId == category.Id ? "active" : "")">
                    <a href="@Url.Action("Index", "Home", new { categoryId = category.Id })" class="category-link">
                        <div class="category-icon">
                            <i class="fas fa-tag"></i>
                        </div>
                        <div class="category-details">
                            <h5 class="category-title">@category.Name</h5>
                            <p class="category-count">@(category.Products?.Count ?? 0) sản phẩm</p>
                        </div>
                    </a>
                </div>
            }
        </div>

        <!-- Right Column: Product Display -->
        <div class="col-md-9 product-display">
            <div class="product-header">
                <h3 class="mb-4">Sản phẩm</h3>
                <!-- Hiển thị thông báo tìm kiếm nếu có -->
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <p class="text-muted mb-4">Kết quả tìm kiếm cho: <strong>@ViewBag.SearchTerm</strong></p>
                }
            </div>

            @if (ViewBag.Products != null && ViewBag.Products.Count > 0)
            {
                <div class="row g-4 product-grid">
                    @foreach (var product in ViewBag.Products)
                    {
                        <div class="col-md-4 product-column">
                            <div class="product-card">
                                <div class="product-image-container">
                                    <div class="product-image" style="background-image: url('@(product.ImageUrl ?? "/images/default-product.jpg")');"></div>
                                    <div class="product-overlay">
                                        <a href="@Url.Action("Display", "Product", new { id = product.Id })" class="btn btn-preview">Xem nhanh</a>
                                    </div>
                                </div>
                                <div class="product-info">
                                    <h5 class="product-name">@product.Name</h5>
                                    <p class="product-category">@(product.Category?.Name ?? "Không có danh mục")</p>
                                    <div class="product-footer">
                                        <span class="product-price">@product.Price.ToString("N0") VNĐ</span>
                                        <a href="@Url.Action("Index", "Checkout", new { productId = product.Id })" class="btn btn-purchase">Mua</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="no-products-message">
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <p class="text-muted">Không tìm thấy sản phẩm nào khớp với từ khóa: <strong>@ViewBag.SearchTerm</strong></p>
                    }
                    else
                    {
                        <p class="text-muted">Không có sản phẩm nào trong danh mục này.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>