@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<style>
    /* Global Styles */
    .product-catalog {
        background-color: #f8f9fa;
        padding: 2rem 0;
    }

    /* Advertisement Banner Styles */
    .advertisement-banner {
        width: 100%;
        height: 300px;
        margin-bottom: 2rem;
        border-radius: 12px;
        overflow: hidden;
        position: relative;
    }

        .advertisement-banner img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            display: block;
        }

    /* Category Sidebar Styles */
    .category-sidebar {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
        transition: all 0.3s ease;
    }

    .category-card {
        margin-bottom: 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .category-card:hover {
            transform: translateX(10px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .category-card.active {
            background-color: #f0f0f0;
            border-left: 4px solid #007bff;
        }

    .category-link {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: #333;
        padding: 0.75rem;
    }

    .category-icon {
        margin-right: 1rem;
        color: #007bff;
        font-size: 1.5rem;
    }

    /* Product Display Styles */
    .product-grid {
        display: flex;
        flex-wrap: wrap;
    }

    .product-card {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        height: 100%;
    }

        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
        }

    .product-image-container {
        position: relative;
        overflow: hidden;
    }

    .product-image {
        height: 250px;
        background-size: cover;
        background-position: center;
        transition: transform 0.3s ease;
    }

    .product-card:hover .product-image {
        transform: scale(1.1);
    }

    .product-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .product-card:hover .product-overlay {
        opacity: 1;
    }

    .btn-preview {
        color: white;
        border: 2px solid white;
        padding: 10px 20px;
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .btn-preview:hover {
            background-color: white;
            color: black;
        }

    .product-info {
        padding: 1rem;
    }

    .product-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1rem;
        flex-wrap: wrap;
    }

    .btn-purchase {
        background-color: #007bff;
        color: white;
        border-radius: 20px;
        padding: 6px 12px;
        font-size: 0.9rem;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        .btn-purchase:hover {
            background-color: #0056b3;
        }

    .product-price {
        font-size: 1.1rem;
        font-weight: 600;
        color: #e74c3c;
    }

    .product-actions {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .quantity-input {
        width: 50px;
        padding: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        text-align: center;
    }

    .btn-add-to-cart {
        background-color: #28a745;
        color: white;
        border-radius: 20px;
        padding: 6px 12px;
        font-size: 0.9rem;
        transition: background-color 0.3s ease;
    }

        .btn-add-to-cart:hover {
            background-color: #218838;
        }

    .category-card {
        animation: fadeIn 0.5s ease;
    }

    .product-card {
        animation: fadeIn 0.5s ease;
    }

    .site-footer {
        background-color: #2c3e50;
        color: #ecf0f1;
        padding: 3rem 0;
        margin-top: 2rem;
    }

        .site-footer a {
            color: #ecf0f1;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .site-footer a:hover {
                color: #3498db;
            }

        .site-footer h5 {
            font-size: 1.25rem;
            margin-bottom: 1.5rem;
            color: #ecf0f1;
        }

        .site-footer ul {
            list-style: none;
            padding: 0;
        }

            .site-footer ul li {
                margin-bottom: 0.75rem;
            }

    .social-icons {
        display: flex;
        gap: 1rem;
    }

        .social-icons a {
            font-size: 1.5rem;
            color: #ecf0f1;
            transition: color 0.3s ease;
        }

            .social-icons a:hover {
                color: #3498db;
            }

    .footer-bottom {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 1.5rem;
        margin-top: 2rem;
        text-align: center;
        width: 100%;
    }

    /* Notification Styles */
    .notification {
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: #28a745;
        color: white;
        padding: 15px 25px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        min-width: 200px;
        text-align: center;
        display: none;
    }

        .notification.error {
            background-color: #dc3545;
        }
</style>

<!-- Thêm div cho thông báo -->
<div id="notification" class="notification"></div>

<div class="container-fluid product-catalog">
    <div class="advertisement-banner">
        <img src="~/images/dibien.png" alt="Description">
    </div>

    <div class="row g-4">
        <div class="col-md-3 category-sidebar">
            <div class="category-header">
                <h3 class="mb-4">Danh mục</h3>
            </div>

            <div class="category-card @(ViewBag.SelectedCategoryId == null ? "active" : "")">
                <a href="@Url.Action("Index", "Home")" class="category-link">
                    <div class="category-icon">
                        <i class="fas fa-th-large"></i>
                    </div>
                    <div class="category-details">
                        <h5 class="category-title">Tất cả</h5>
                        <p class="category-count">
                            @(ViewBag.Products != null ? ViewBag.Products.Count : 0) sản phẩm
                        </p>
                    </div>
                </a>
            </div>

            @foreach (var category in ViewBag.Categories)
            {
                <div class="category-card @(ViewBag.SelectedCategoryId == category.Id ? "active" : "")">
                    <a href="@Url.Action("Index", "Home", new { categoryId = category.Id })" class="category-link">
                        <div class="category-icon">
                            <i class="fas fa-tag"></i>
                        </div>
                        <div class="category-details">
                            <h5 class="category-title">@category.Name</h5>
                            <p class="category-count">@(category.Products?.Count ?? 0) sản phẩm</p>
                        </div>
                    </a>
                </div>
            }
        </div>

        <div class="col-md-9 product-display">
            <div class="product-header">
                <h3 class="mb-4">Sản phẩm</h3>
                <a href="@Url.Action("Index", "Cart")" class="btn btn-primary mb-4">
                    <i class="fas fa-shopping-cart"></i> Xem giỏ hàng
                </a>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                {
                    <p class="text-muted mb-4">Kết quả tìm kiếm cho: <strong>@ViewBag.SearchTerm</strong></p>
                }
            </div>

            @if (ViewBag.Products != null && ViewBag.Products.Count > 0)
            {
                <div class="row g-4 product-grid">
                    @foreach (var product in ViewBag.Products)
                    {
                        <div class="col-md-4 product-column">
                            <div class="product-card">
                                <div class="product-image-container">
                                    <div class="product-image" style="background-image: url('@(product.ImageUrl ?? "/images/default-product.jpg")');"></div>
                                    <div class="product-overlay">
                                        <a href="@Url.Action("Display", "Product", new { id = product.Id })" class="btn btn-preview">Xem nhanh</a>
                                    </div>
                                </div>
                                <div class="product-info">
                                    <h5 class="product-name">@product.Name</h5>
                                    <p class="product-category">@(product.Category?.Name ?? "Không có danh mục")</p>
                                    <div class="product-footer">
                                        <span class="product-price">@product.Price.ToString("N0") VNĐ</span>
                                        <div class="product-actions">
                                            <!-- Nút "Mua" -->
                                            <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline;">
                                                <input type="hidden" name="productId" value="@product.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="btn btn-purchase" formaction="@Url.Action("AddToCart", "Cart")" formmethod="post" onclick="this.form.action='@Url.Action("Index", "Checkout")';">
                                                    Mua
                                                </button>
                                            </form>
                                            <!-- Nút "Thêm" -->
                                            <form class="add-to-cart-form" style="display:inline;">
                                                <input type="hidden" name="productId" value="@product.Id" />
                                                <input type="number" name="quantity" value="1" min="1" class="quantity-input" />
                                                <button type="button" class="btn btn-add-to-cart" onclick="addToCart(@product.Id, this)">
                                                    <i class="fas fa-cart-plus"></i> Thêm
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="no-products-message">
                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                    {
                        <p class="text-muted">Không tìm thấy sản phẩm nào khớp với từ khóa: <strong>@ViewBag.SearchTerm</strong></p>
                    }
                    else
                    {
                        <p class="text-muted">Không có sản phẩm nào trong danh mục này.</p>
                    }
                </div>
            }
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

<!-- Thêm jQuery và script xử lý AJAX -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function addToCart(productId, button) {
        var form = $(button).closest('form');
        var quantity = form.find('input[name="quantity"]').val();

        $.ajax({
            url: '@Url.Action("AddToCart", "Cart")',
            type: 'POST',
            data: {
                productId: productId,
                quantity: quantity
            },
            success: function (response) {
                if (response.success) {
                    showNotification(response.message, true);
                } else {
                    showNotification(response.message, false);
                }
            },
            error: function () {
                showNotification('Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng.', false);
            }
        });
    }

    function showNotification(message, isSuccess) {
        var notification = $('#notification');
        notification.text(message);
        notification.removeClass('error');
        if (!isSuccess) {
            notification.addClass('error');
        }
        notification.fadeIn();
        setTimeout(function () {
            notification.fadeOut();
        }, 3000);
    }
</script>